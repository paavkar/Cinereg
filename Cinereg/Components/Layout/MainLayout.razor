@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<FluentLayout>
    <FluentHeader>
        Cinereg
        <Theme />
        <FluentSpacer />
        @* <AuthorizeView>
            <Authorized>
                <UserProfileMenu UserEmail=@context.User.Identity?.Name />
            </Authorized>
        </AuthorizeView> *@
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent>
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://paavokarppinen.azurewebsites.net/" target="_blank">My website</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<FluentToastProvider RemoveToastsOnNavigation="false" Position="ToastPosition.BottomCenter" @rendermode="RenderMode.InteractiveServer" />
<FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
<FluentTooltipProvider @rendermode="RenderMode.InteractiveServer" />
<FluentMessageBarProvider @rendermode="RenderMode.InteractiveServer" />
